{% extends '_layout.html.twig' %}

{% block title %}
    Mon Profil | Ambassadeur
{% endblock %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('profil') }}
    {% endblock %}

{% block body %}
    <section class="d-flex align-items-center mb-5">
        <div class="d-flex align-items-center flex-column">
            <h1 class="my-4 text-center"> Mon Profil Ambassadeur</h1>
            <div class=" profil d-flex col-md-10 my-3 p-4">
                <div class="col-md-3">
                    <img src="{{ vich_uploader_asset(user, 'pictureFile', 'App\\Entity\\User') }}" class="card-img" alt="Photo ambassadeur">
                </div>

                <div class="d-flex col-md-9 justify-content-around">
                    <div class="d-flex flex-column">
                        <h3>Général</h3>
                        <p>Nom : {{ user.lastName }}</p>
                        <p>Prénom : {{ user.firstname }}</p>
                        <p><i class="fas fa-phone-alt"></i> : {{ user.phoneNumber }}</p>
                        <p><i class="fas fa-at"></i> : {{ user.email }}</p>
                    </div>
                    <div class="d-flex flex-column">
                        <h3>Professionnel</h3>
                        <p>Entreprise : {{ user.company }}</p>
                        <p>Secteur d'activité : {{ user.activity }}</p>
                        <p> Rue : {{ user.street }}</p>
                        <p>Code postal : {{ user.postalCode }}</p>
                        <p><i class="fas fa-city"></i> :{{ user.city }}</p></div>

                </div>


            </div>


            <button class="btn btn-lg btn-primary mt-3"><a class="text-light" href="{{ path('user_edit',  {'login': user.login}) }}">Modifier</a></button>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="https://kit.fontawesome.com/38fc56fe7a.js" crossorigin="anonymous"></script>
{% endblock %}
